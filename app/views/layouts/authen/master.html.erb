<!DOCTYPE html>
<html>
  <head>
    <title>Mini Project Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= custom_bootstrap_flash %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
      <div class="container">
          <%= link_to image_tag("gb.png", class: "icon-flag"), locale:"en" %>
          <%= link_to image_tag("vn.png", class: "icon-flag"), locale:"vi" %>
          <%= link_to "Post vote", "/login", class: "navbar-brand post-vote" %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                      <%= link_to t('master.login'), "/login", class: "navbar-brand" %>
                  </li>
                  <li class="nav-item">
                      <%= link_to t('master.register'), "/users/new", class: "navbar-brand" %>
                  </li>
              </ul>
          </div>
      </div>
    </nav>

    <%= yield :content %>
    <section class="content">
      <% if flash.any? %>
        <script type="text/javascript">
          <% flash.each do |key, value| %>
            <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
            toastr.<%= type %>('<%= value %>')
          <% end %>
        </script>
      <% end %>
    </section>

  </body>
</html>
