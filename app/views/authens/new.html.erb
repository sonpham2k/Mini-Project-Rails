<% content_for :content do %>
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><%= t('master.login') %></div>
                    <div class="card-body">
                        <%= form_for :authens, url: login_path do |form| %>
                            <%# Email %>
                            <div class="form-group row">
                                <%= form.label :email_address, "Email: ", :class => "col-md-4 col-form-label text-md-right" %>
                                <div class="col-md-6">
                                    <%= form.text_field :email_address, :class => "form-control", :required => true %>
                                </div>
                            </div>

                            <%# Password %>
                            <div class="form-group row">
                                <%= form.label :password, "Password: ", :class => "col-md-4 col-form-label text-md-right" %>
                                <div class="col-md-6">
                                    <%= form.password_field :password, :class => "form-control", :required => true %>
                                </div>
                            </div>

                            <%# Remember me %>
                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <%# Remember %>
                                    </div>
                                </div>
                            </div>

                            <%# Login %>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    <%= t('master.login') %>
                                </button>
                                <%= link_to "Forgot password", password_resets_new_path, :class => "btn btn-link" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</main>
<% end %>
