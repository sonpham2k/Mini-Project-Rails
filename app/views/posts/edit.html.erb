<% content_for :content do %>
  <div class="title">Edit Post</div>
  <div class="cotainer">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <%= form_for(@post) do |form| %>
              <% if @post.errors.any? %>
                    <ul>
                        <% @post.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
              <div>
                <%#  Title %>
                <div class="answer">Title Post</div>
                <div class="form-group row">
                    <%= form.label :title, :class => "col-md-4 col-form-label text-md-right text-white" %>
                    <div class="col-md-6">
                        <%= form.text_area :title, :class => "form-control", :value => @post.title %>
                    </div>
                </div>
                <%# Answer %>
                <div id="answer" class="answer">Answer</div>
                <ul class="remove-dot-ul" id="answer">
                  <% @post.post_contents.each do |post_content| %>
                    <li>
                      <div class="form-group row comment">
                          <div class="input-group input-group-choose">
                            <input class="form-control size-text-field" disabled type="text" name="content[]" post_id="<%= post_content.id %>" value="<%= post_content.content%>">
                            <%= link_to "#" do %>
                              <i class="btn fa fa-times trigger-delete-post"></i>
                            <% end %>
                          </div>          
                      </div>
                    </li>
                  <% end %>
                </ul>
                <div id="main">
                </div>
                <div class="post-vote">
                    <%= link_to "+", "#", :class => "btn btn-primary ", :id => "add" %>
                </div>
                <%# Edit post %>
                <div class="col-md-6 offset-md-4">
                    <%= form.button "Submit", :class => "btn btn-primary", :id => "submit" %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
