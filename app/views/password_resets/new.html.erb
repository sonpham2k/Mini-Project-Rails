<% content_for :content do %>
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><%= t('master.reset-password') %></div>
                    <div class="card-body">
                        <%= form_for :user, url: password_resets_create_path, method: :post do |form|%>
                            <%# Email %>
                            <div class="form-group row">
                                <%=  form.label :email, 'E-Mail', :class => "col-md-4 col-form-label text-md-right" %>
                                <div class="col-md-6">
                                    <%= form.text_field :email, :class => "form-control", :required => true %>
                                </div>
                            </div>

                            <%# Login %>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    <%= t('master.reset-password') %>
                                </button>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</main>
<% end %>
