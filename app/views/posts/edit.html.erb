<% content_for :content do %>
  <div class="title">Edit Post</div>
  <div class="cotainer">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <%= form_for @post do |form| %>
            <div>
                <%#  Title %>
                <div class="answer">Title Post</div>
                <div class="form-group row">
                    <%= form.label :title, :class => "col-md-4 col-form-label text-md-right text-white" %>
                    <div class="col-md-6">
                        <%= form.text_area :title, :class => "form-control", :required => true, :value => @post.title %>
                    </div>
                </div>
                <%# Answer %>
                <div class="answer">Answer</div>

                <% @post_content.each do |post_content| %>
                  <div class="form-group row comment">
                      <div class="col-md-6">
                          <div class="row">
                              <div class="col">
                                  <input class="form-control size-text-field" type="text" name="content" id="content" value="<%= post_content.content%>">
                                  <i class="fa fa-times" aria-hidden="true"></i>
                              </div>
                          </div>              
                      </div>
                  </div>
                <% end %>
                <%# Edit post %>
                <div class="col-md-6 offset-md-4">
                    <%= form.button "Submit", :class => "btn btn-primary" %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
