<% content_for :content do %>
    <div class="title">List Post</div>
    <%= form_with do |form| %>
      <div class="main">
          <div class="input-group"> 
            <%# Search %>
            <%= form.text_field :search, :class => "form-control", :placeholder => "Search by title" %>
            <div class="input-group-append">
              <%= form.button "Save", :class => "btn btn-primary" do %>
                <i class="fa fa-search"></i>
              <% end %>
            </div>
          </div>
      </div>
    <% end %>
 <i class="bi bi-trash"></i>
    <div class="main-container">
      <ul class="grid-wrapper">
        <% @posts.each do |post| %>
          <li class="post-list" data-toggle="modal" data-target="#exampleModal">
            <i class="fa fa-ellipsis-v icon-trash"></i>
            <span class="span-break"><%= post.title %></span>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="d-flex justify-content-center">
      <%= will_paginate @clients, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog size-modal" role="document">
        <div class="modal-content size-post-detail">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Post Detail</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body border-modal-body">
              <%= form_with do |form| %>
                <div>
                      <%#  Title %>
                      <div class="answer">Title post</div>
                      <div class="form-group row">
                          <%= form.label :title, :class => "col-md-4 col-form-label text-md-right text-white" %>
                          <div class="col-md-6">
                              <%= form.text_area :title, :class => "form-control", :required => true %>
                          </div>
                      </div>

                      <div class="answer">Answer</div>
                      <% # A %>
                      <div class="form-group row">
                          <%= form.check_box :answer_a %>
                      </div>
                </div>
              <% end %>
          </div>
          <div class="modal-body border-modal-body">
            <div>
                <h3 class="heading">Comment</h3>
                <div class="container">
                    <%= form_with do |form| %>
                      <%= form.text_area nil, :class => "form-control status-box textarea-comment", :placeholder => "Enter your comment here..." %>
                      <div class="button-group pull-right">
                          <p class="counter">250</p>
                          <%= link_to "Post", "#", :class => "btn btn-primary" %>
                      </div>
                      <ul class="posts">
                      </ul>
                    <% end %>
                </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save Vote</button>
          </div>
        </div>
      </div>
    </div>
<% end %>
