<% content_for :content do %>
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><%= t('master.login') %></div>
                    <div class="card-body">
                        <form action="" method="">
                            <%# Email %>
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right"><%= t('master.email') %></label>
                                <div class="col-md-6">
                                    <input type="text" id="email_address" class="form-control" name="email-address" required autofocus>
                                </div>
                            </div>

                            <%# Password %>
                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right"><%= t('master.password') %></label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <%# Remember me %>
                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="remember"> <%= t('master.remember-me') %>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <%# Login %>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    <%= t('master.login') %>
                                </button>
                                <%= link_to t('master.forgot'), "/forgot-password", class: "btn btn-link" %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</main>
<% end %>
